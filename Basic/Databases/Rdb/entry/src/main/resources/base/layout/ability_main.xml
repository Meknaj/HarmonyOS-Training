<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
                   ohos:width="match_parent"
                   ohos:height="match_parent"
                   ohos:orientation="vertical">
    <DirectionalLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
                       ohos:width="match_parent"
                       ohos:height="match_content"
                       ohos:orientation="vertical">

        <TextField
            ohos:id="$+id:name_text"
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:text_size="18fp"
            ohos:hint="$string:name"
            ohos:margin="10vp"/>

        <TextField
            ohos:id="$+id:lastName_text"
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:text_size="18fp"
            ohos:hint="$string:lastName"
            ohos:margin="10vp"/>
    </DirectionalLayout>

    <DirectionalLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
                       ohos:width="match_parent"
                       ohos:height="match_content"
                       ohos:orientation="horizontal">
        <Button ohos:id="$+id:add_button"
                ohos:width="100vp"
                ohos:height="match_content"
                ohos:text_size="20fp"
                ohos:text="$string:add"
                ohos:background_element="$graphic:button_background"
                ohos:margin="10vp"/>

        <Button ohos:id="$+id:update_button"
                ohos:width="100vp"
                ohos:height="match_content"
                ohos:text_size="20fp"
                ohos:background_element="$graphic:button_background"
                ohos:text="$string:update"
                ohos:margin="10vp"/>

    </DirectionalLayout>

    <ListContainer
        ohos:id="$+id:people_list"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:margin="10vp"/>

</DirectionalLayout>