<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent">

    <Button
        ohos:id="$+id:target_button1"
        ohos:horizontal_center="true"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:padding="20vp"
        ohos:top_margin="50vp"
        ohos:background_element="$graphic:background_ability_main"
        ohos:text="Target1"
        ohos:text_size="25fp"
        />

    <Button
        ohos:id="$+id:target_button2"
        ohos:below="$id:target_button1"
        ohos:horizontal_center="true"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:padding="20vp"
        ohos:top_margin="20vp"
        ohos:background_element="$graphic:background_ability_main"
        ohos:text="Target2"
        ohos:text_size="25fp"
        />

    <Button
        ohos:id="$+id:target_button3"
        ohos:below="$id:target_button2"
        ohos:horizontal_center="true"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:padding="20vp"
        ohos:top_margin="20vp"
        ohos:background_element="$graphic:background_ability_main"
        ohos:text="Target3"
        ohos:text_size="25fp"
        />

    <Image
        ohos:id="$+id:image_component"
        ohos:height="300vp"
        ohos:width="300vp"
        ohos:horizontal_center="true"
        ohos:below="$id:target_button3"
        />


</DependentLayout>