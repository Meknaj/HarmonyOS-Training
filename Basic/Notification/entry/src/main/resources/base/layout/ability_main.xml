<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Button
        ohos:id="$+id:normal_content"
        ohos:text="$string:NormalContent"
        ohos:height="match_content"
        ohos:width="250vp"
        ohos:layout_alignment="horizontal_center"
        ohos:top_margin="10vp"
        ohos:text_color="$color:white"
        ohos:background_element="$graphic:background_ability_main"
        ohos:bottom_margin="10vp"
        ohos:text_size="20fp"
        ohos:padding="10vp"
        />

    <Button
        ohos:id="$+id:picture_content"
        ohos:text="$string:PictureContent"
        ohos:height="match_content"
        ohos:width="250vp"
        ohos:layout_alignment="horizontal_center"
        ohos:bottom_margin="10vp"
        ohos:background_element="$graphic:background_ability_main"
        ohos:text_color="$color:white"
        ohos:text_size="20fp"
        ohos:padding="10vp"
        />

    <Button
        ohos:id="$+id:multiline_content"
        ohos:text="$string:MultiLineContent"
        ohos:height="match_content"
        ohos:width="250vp"
        ohos:layout_alignment="horizontal_center"
        ohos:bottom_margin="10vp"
        ohos:background_element="$graphic:background_ability_main"
        ohos:text_color="$color:white"
        ohos:text_size="20fp"
        ohos:padding="10vp"
        />

    <Button
        ohos:id="$+id:normal_low_content"
        ohos:text="$string:NormalContentLow"
        ohos:height="match_content"
        ohos:width="250vp"
        ohos:layout_alignment="horizontal_center"
        ohos:bottom_margin="10vp"
        ohos:background_element="$graphic:background_ability_main"
        ohos:text_color="$color:white"
        ohos:text_size="20fp"
        ohos:padding="10vp"
        />

</DirectionalLayout>