<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="100vp"
    ohos:width="match_parent"
    ohos:orientation="vertical">

        <Text
            ohos:id="$+id:txt_dia"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:layout_alignment="center"
            ohos:margin="10vp"
            ohos:text="Do you really want to exit ?"
            ohos:text_color="$color:black"
            ohos:text_size="15vp"/>


        <DirectionalLayout
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:alignment="horizontal_center"
            ohos:orientation="horizontal" >

            <Button
                ohos:id="$+id:btn_yes"
                ohos:width="80vp"
                ohos:height="30vp"
                ohos:clickable="true"
                ohos:left_margin="30vp"
                ohos:text_size="10vp"
                ohos:right_margin="80vp"
                ohos:background_element="$graphic:button_background"
                ohos:text="$string:yes"
                ohos:text_color="$color:blue"
                />

            <Button
                ohos:id="$+id:btn_no"
                ohos:width="80vp"
                ohos:height="30vp"
                ohos:right_margin="20vp"
                ohos:background_element="$graphic:button_background"
                ohos:text_size="10vp"
                ohos:layout_alignment="center"
                ohos:clickable="true"
                ohos:text="$string:no"
                ohos:text_color="$color:blue"
                />
    </DirectionalLayout>

</DirectionalLayout>